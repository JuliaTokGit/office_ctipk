<li{{#class}} class="{{class}}"{{/class}}>

<a href="{{#link}}{{path.base}}{{link}}{{/link}}{{^link}}javascript:;{{/link}}" {{#details}}class="detailed"{{/details}}>
	<span class="title">{{title}}</span>
	{{#details}}<span class="details">{{details}}</span>{{/details}}
	{{#exist_submenu}}<span class="{{class}} arrow"></span>{{/exist_submenu}}
</a>

{{#icon}}<span class="icon-thumbnail {{#class}}bg-primary {{/class}}"><i class="{{icon}}"></i></span>{{/icon}}


{{#exist_submenu}}
<ul class="sub-menu">
	{{#submenu}}
	{{> layout.sidebar.item}}
	{{/submenu}}
</ul>
{{/exist_submenu}}
</li>
