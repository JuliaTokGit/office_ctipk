{{#collection_list}}
<!-- START PANEL -->
<div class="panel panel-transparent">
  <div class="panel-heading">
    <div class="panel-title">Конфиги
    </div>
  </div>
  <div class="panel-body">
    <div class="table-responsive">
      <table class="table table-hover table-condensed" id="condensedTable">
        <thead>
          <tr>
            <th style="width:30%">Имя</th>
            <th style="width:30%"></th>
          </tr>
        </thead>
        <tbody>
          {{#configs}}
          <tr>
            <td class="v-align-middle semi-bold">{{_id}}</td>
            <td class="v-align-middle"><a class="btn btn-small" href="{{site.url}}/config/{{app_name}}/{{collection_name}}/item/{{_id}}">Редактировать</a></td>
          </tr>
          {{/configs}}
        </tbody>
      </table>
    </div>
  </div>
</div>
<!-- END PANEL -->
{{/collection_list}}
{{^collection_list}}
<!-- START PANEL -->
<div class="panel panel-transparent">
  <div class="panel-heading">
    <div class="panel-title">Редактировать настройки страницы {{id}}
    </div>
  </div>
  <div class="panel-body">
  	

  	<div id='json_editor'>
      <div class="loading">
        <p class="small hint-text">Идёт загрузка конфигурации</p>
        <div class="progress">
        <div class="progress-bar-indeterminate" style="display: block;">
        </div>
        </div>
      </div>
        
    	<script>
    		config={{{config}}};
        app_name="{{app_name}}";
        collection_name="{{collection_name}}";
        id="{{id}}";
    	</script>
    </div>
  </div>
</div>
<!-- END PANEL -->

<form method="POST">
  
<input type="hidden" name="action" value="save"/>
{{#pageview}}
<div class="panel panel-transparent">
  <div class="panel-heading">
    <div class="panel-title">Редактировать содержимое страницы {{id}}
    </div>
  </div>
  <div class="panel-body">

        
          <textarea rows="18" class="trumbowyg" name="pageview" style="width:100%; height:400px;">{{{pageview}}}</textarea>
        

  </div>
</div>
{{/pageview}}

{{#pagejs}}
<div class="panel panel-transparent">
  <div class="panel-heading">
    <div class="panel-title">Редактировать встраиваемый js страницы {{id}}
    </div>
  </div>
  <div class="panel-body">

        
          <textarea rows="18" name="pagejs"  style="width:100%; height:400px;">{{{pagejs}}}</textarea>
        

  </div>
</div>
{{/pagejs}}

<div id="rubikon"></div>

<div class="panel panel-transparent"><div class="panel-body"><button type="submit" class="btn btn-primary m-r-20">Сохранить</button>{{^pageview}}<button class="btn"  id="addview">Добавить содержимое</button>{{/pageview}}{{^pagejs}}<button class="btn" id="addjs">Добавить js</button>{{/pagejs}}</div></div>

</form>

<div id="addview-container" class="panel panel-transparent hidden">
  <div class="panel-heading">
    <div class="panel-title">Редактировать содержимое страницы {{id}}
    </div>
  </div>
  <div class="panel-body">

        
          <textarea rows="18"  class="trumbowyg" name="pageview"  style="width:100%; height:400px;"></textarea>
        

  </div>
</div>

<div id="addjs-container" class="panel panel-transparent hidden">
  <div class="panel-heading">
    <div class="panel-title">Редактировать встраиваемый js страницы {{id}}
    </div>
  </div>
  <div class="panel-body">

        
          <textarea rows="18" name="pagejs"  style="width:100%; height:400px;"></textarea>
        

  </div>
</div>



