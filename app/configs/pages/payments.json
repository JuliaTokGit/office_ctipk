{
    "title": "Payments",
    "header": "Payments",
    "bodyclass": "fixed-header",
    "layout": "default.datatables",
    "includes": ["dt-crud-modals","filters"],
    "quickview":false,
    "filtering": {},
    "datatables":{
        "default":{
            "tableId":"default",
            "buttons" : {"create":true,"edit":true,"delete":true,"search":true},
            "crud_modals":{
                "titles":{
                    "create":"Add payment",
                    "edit":"Edit payment",
                    "delete":"Delete payment"
                },
                "fields": [

                            {
                                "label":"uuid",
                                "type":"text",
                                "property": "uuid"
                            },
                            {
                                "label":"Paysheet id",
                                "type":"text",
                                "property": "paysheet_id"
                            },
                            {
                                "label":"Amount",
                                "type":"text",
                                "property": "amount"
                            },

                            {
                                "label":"Customer name",
                                "type":"text",
                                "property": "name"
                            },
                            {
                                "label":"Customer phone",
                                "type":"text",
                                "property": "phone"
                            },
                            {
                                "label":"State",
                                "type":"select_ajax",
                                "property": "state[]",
                                "url":"/select-ajax/payment_states"
                            }

                        ],

                "subheaders":{"delete":"Please confirm deletion \"<span data-obj=uuid></span>\" ?"}
            }
        }
    }
}
