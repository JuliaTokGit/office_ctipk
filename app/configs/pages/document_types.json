{
    "title": "Document types",
    "header": "Document types",
    "bodyclass": "fixed-header",
    "layout": "default.datatables",
    "includes": ["dt-crud-modals","filters"],
    "quickview":true,
    "filtering": {"group_id":true},
    "datatables":{
        "default":{
            "tableId":"default",
            "buttons" : {"create":true,"edit":true,"delete":true },
            "crud_modals":{
                "titles":{
                    "create":"Add document type",
                    "edit":"Edit document type",
                    "delete":"Delete document type"
                },
                "fields": [

                            {
                                "label": "Name",
                                "type":"text",
                                "property": "name"
                            },
                            {
                                "label": "Description",
                                "type":"text",
                                "property": "description"
                            },
                            {
                                "label": "Scheme",
                                "type":"textarea",
                                "property": "scheme"
                            },
                            {
                                "label": "Template",
                                "type":"textarea",
                                "property": "template"
                            },
                            {
                                "label":"Available statuses",
                                "type":"select",
                                "multiple":true,
                                "property": "statuses",
                                "options":
                                {
                                    "source":"statuses",
                                    "value":"id",
                                    "text":"name"
                                }
                            },
                            {
                                "label":"Starting status",
                                "type":"select_ajax",
                                "property": "starting_status_id",
                                "url":"/select-ajax/statuses"
                            },
                            {
                                "label":"Document type group",
                                "type":"select_ajax",
                                "property": "group_id",
                                "url":"/select-ajax/groups"
                            }
                        ],

                "subheaders":{"delete":"Please confirm deletion \"<span data-obj=name></span>\"?"}
            }
        }
    }
}
