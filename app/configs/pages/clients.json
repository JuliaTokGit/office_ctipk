{
    "title": "Клиенты",
    "header": "Клиенты",
    "bodyclass": "fixed-header",
    "layout": "default.datatables",
    "includes": ["dt-crud-modals","filters"],
    "datatables":{
        "default":{
            "tableId":"default",
            "buttons" : {"create":true,"edit":true,"delete":true },
            "crud_modals":{
                "titles":{
                    "create":"Добавить клиента",
                    "edit":"Редактировать клиента",
                    "delete":"Удалить клиента"
                },
                "fields": [

                            {
                                "label": "Название",
                                "type":"text",
                                "property": "name"
                            },
                            {
                                "type":"group_begin",
                                "property": "none"
                            },
                            {
                                "label": "Адрес",
                                "type":"text",
                                "property": "address",
                                "columns":6
                            },

                            {
                                "label": "Почтовый адрес",
                                "type":"text",
                                "property": "post_address",
                                "columns":6
                            },
                            {
                                "type":"group_end",
                                "property": "none"
                            },
                            {
                                "label": "Инн",
                                "type":"text",
                                "property": "inn"
                            },
                            {
                                "label": "Реквизиты",
                                "type":"textarea",
                                "property": "requisites"
                            },
                            {
                                "type":"group_begin",
                                "property": "none"
                            },
                            {
                                "label": "Телефон",
                                "type":"text",
                                "property": "phone",
                                "columns":6
                            },
                            {
                                "label": "Email",
                                "type":"text",
                                "property": "username",
                                "columns":6
                            },
                            {
                                "type":"group_end",
                                "property": "none"
                            },
                            {
                                "type":"group_begin",
                                "property": "none"
                            },
                            {
                                "label": "Баланс",
                                "type":"text",
                                "property": "money_balance",
                                "columns":6
                            },
                            {
                                "label":"Кредитный лимит",
                                "type":"text",
                                "property": "credit_limit",
                                "columns":6
                            },
                            {
                                "type":"group_end",
                                "property": "none"
                            }
                        ],

                "subheaders":{"delete":"Вы уверены что хотите удалить \"<span data-obj=name></span>\"?"}
            }
        }
    }
}
