{
    "title": "Currencies",
    "header": "Currencies",
    "bodyclass": "fixed-header",
    "layout": "default.datatables",
    "includes": ["dt-crud-modals","filters"],
    "datatables":{
        "default":{
            "tableId":"default",
            "buttons" : {"create":true,"edit":true,"delete":true },
            "crud_modals":{
                "titles":{
                    "create":"Add currency",
                    "edit":"Edit currency",
                    "delete":"Delete currency"
                },
                "fields": [

                            {
                                "label":"Code",
                                "type":"text",
                                "property": "code"
                            },
                            {
                                "label":"Name",
                                "type":"text",
                                "property": "name"
                            },
                            {
                                "label":"Symbol",
                                "type":"text",
                                "property": "symbol"
                            }
                        ],

                "subheaders":{"delete":"Please confirm deletion \"<span data-obj=name></span>\" ?"}
            }
        }
    }
}
