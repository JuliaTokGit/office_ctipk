{
    "title": "Paysheets",
    "header": "Paysheets",
    "bodyclass": "fixed-header",
    "layout": "default.datatables",
    "includes": ["dt-crud-modals","filters"],
    "quickview":true,
    "filtering": {"gl_account_id":true,"currency_id":true},
    "datatables":{
        "default":{
            "tableId":"default",
            "buttons" : {"create":true,"edit":true,"delete":true,"search":true},
            "crud_modals":{
                "titles":{
                    "create":"Add paysheet",
                    "edit":"Edit paysheet",
                    "delete":"Delete paysheet"
                },
                "fields": [
                            {
                                "label":"uuid",
                                "type":"text",
                                "property": "uuid"
                            },
                            {
                                "label": "Currency",
                                "type":"select_ajax",
                                "property": "currency_code",
                                "url":"/select-ajax/currencies"
                            },
                            {
                                "label":"Customer account id",
                                "type":"text",
                                "property": "account_id"
                            },
                            {
                                "label":"Password",
                                "type":"text",
                                "property": "password"
                            },
                            {
                                "label":"Status",
                                "type":"select_ajax",
                                "property": "status[]",
                                "url":"/select-ajax/paysheet_statuses"
                            }

                        ],

                "subheaders":{"delete":"Please confirm deletion \"<span data-obj=uuid></span>\" ?"}
            }
        }
    }
}
